<?xml version="1.0"?>
<odoo>
    <record id="fs_call_history_view_search" model="ir.ui.view">
        <field name="name">fs.call_history.view.search</field>
        <field name="model">fs.call_history</field>
        <field name="arch" type="xml">
            <search string="Search Opportunities">
                <field name="from_num"/>
                <field name="to_num"/>
                <separator/>
            </search>
        </field>
    </record>

    

    <record id="fs_call_history_view_tree" model="ir.ui.view">
        <field name="name">fs.call_history.tree</field>
        <field name="model">fs.call_history</field>
        <field name="arch" type="xml">
            <!-- <tree string="Channel" editable="bottom"> -->
            <tree>
                <field name="date"/>
                <field name="from_num"/>
                <field name="from_name"/>
                <field name="from_type"/>
                <field name="to_num"/>
                <field name="to_name"/>
                <field name="to_status"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>


    <!-- Configuration/Lead & Opportunities/Lost Reasons Menu -->
    <record id="fs_call_history_action" model="ir.actions.act_window">
        <field name="name">Журнал вызовов</field>
        <field name="res_model">fs.call_history</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
          <p>
             Нет записей
          </p>
        </field>
    </record>

    <!-- <record id="menu_fs_call_history" model="ir.ui.menu">
        <field name="action" ref="fs_call_history_action"/>
    </record> -->

   
</odoo>